<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Berita</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/berita">Berita</a></li>
              <li class="breadcrumb-item active">Tambah Berita</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <!-- /.card-header -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Berita</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/berita/create" method="post" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Judul Berita</label>
                      <input type="text" class="form-control" id="title" placeholder=" Judul Berita" name="title" required>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Deskripsi</label>
                      <textarea name="description" id="description" cols="3" rows="3" class="form-control" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Gambar</label>
                        <input type="file" class="form-control" id="image"  name="thumbnial" required>
                        <br>
                        <img src="" id="preview">
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Tambah <i class="nav-icon far fa-plus-square"></i></button>                    
                    </div>
                </form>
              <!-- /.card-body -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>

<script>
    function readURL (input) {
        if(input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function(e) {
                $('#preview').attr('src' , e.target.result);
                $('#preview').attr('width' , '50%');
                $('#preview').attr('height' , '30%');
            }

            reader.readAsDataURL(input.files[0])
        }
    }
    $('#image').change(function() {
        readURL(this)
    })
</script>